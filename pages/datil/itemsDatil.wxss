/* pages/datil/itemsDatil.wxss */

scroll-view{
  width: 100%;
  height: 100vh;
}
swiper{
  width: 100%;
  height: 400rpx; 
  margin: 10rpx;
}
swiper image{
  width: 98%;
  height: 100%;
  border-radius: 20rpx;
}
.shareImg{
  width: 60rpx;
  height: 60rpx;
  margin-left: 650rpx;
}
.body{
  border-top: #eee solid ;
}
.container{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.container .image{
  width: 100%;
  border: red solid;
}
.item_info{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
  background-color: #E3E4E2;
  font-size: 40rpx;
  margin-top: 30rpx 20rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.item_info .item_title{
  margin-left: 20rpx;
}
.item_info .item_price{
  color: red;
  font-weight: bold;
  margin-left: 300rpx;
}
.item_datil{
  display: flex;
  flex-direction: column;
  background-color:#eee;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.item_datil text{
  margin-top: 50rpx;
  margin-left: 20rpx;
}
.collect{
  display: flex;
  flex-direction: column;
  margin: 0 40rpx;
}
.collect image{
  width: 50rpx;
  height: 50rpx;
}
.bottom{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  background-color: #eee;
}
.bottom button{
  position: absolute;
  right: 0;
  bottom: 0;
  width: 30%;
  background-color: #489B81;
  color: aliceblue;
  border-radius: 100rpx;
}