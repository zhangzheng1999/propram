/* pages/self/self.wxss */
.container{
background-color: #C0C0C0;
  
}
.box{
  /* 弹性盒子 */
  display: flex;
  /* 主轴水平方向：水平 */
  flex-direction: row;
  /* 是否换行：自动换行 */
  flex-wrap: wrap;
  /* 主轴上的对齐方式:居中 */
  /* justify-content: center; */
  /* 交叉轴如何对齐：居中 */
  align-content: center;

  background-color: #2E2E2E;
  padding: 50rpx;
  position: relative;
  
}
.headImg{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  padding-left: 30rpx;
  justify-content: left;
  background-color:  #2E2E2E;
}
.username{
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 20rpx;
  color: aliceblue;
  justify-content:right;
  padding-left: 100rpx;
 
}
.medal{
  width: 30rpx;
  height: 30rpx;
  margin-top: 26rpx;
  vertical-align: middle;
}
.right{
